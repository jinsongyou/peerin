<h1>Listing productions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  
    <thead>
	<tr>
		<th><%= t("production.name") %></th>
		<th><%= t("production.pcode") %></th>
		<th><%= t("production.pspec") %></th>
		<th><%= t("production.punit") %></th>
		<th><%= t("production.pweight") %></th>
	</tr>
	</thead>
	
  <tbody>
    <% @productions.each do |production| %>
      <tr>
	    <td><%= link_to production.name, production_path(production) %></td>
		<td><%= production.pcode %></td>
		<td><%= production.pspec %></td>
		<td><%= production.punit %></td>
		<td><%= production.pweight %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Production', new_production_path %>
